	<bean id="widgetCacheAction" class="com.ztesoft.net.app.base.core.action.WidgetCacheAction" scope="prototype"/>
	
	<!-- 挂件缓存设置 -->
	<bean id="pageInfoAction" class="com.ztesoft.net.app.base.core.action.PageInfoAction" scope="prototype"/>
	
