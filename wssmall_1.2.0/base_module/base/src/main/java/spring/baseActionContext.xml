	<bean id="indexAction" class="com.ztesoft.net.app.base.core.action.IndexAction" scope="prototype" />
 	
	<!--  版本升级-->
 	<bean id="updateAction" class="com.ztesoft.net.app.base.core.action.UpdateAction" scope="prototype" />	
 	
 	<!-- 系统设置 -->
	<bean id="settingAction" class="com.ztesoft.net.app.base.core.action.SettingAction" scope="prototype"/>
			
