<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	<context:annotation-config />
	<bean name="transactionSendController"
		class="com.ztesoft.mq.client.rocketMQ.control.DefaultEventTransactionSendController">
		<constructor-arg>
			<bean
				class="com.ztesoft.mq.client.rocketMQ.bean.TransactionTemplatePoolFactory">
				<property name="clientConfig">
					<bean class="com.ztesoft.mq.client.rocketMQ.control.EventControlConfig">
						<property name="namesrvAddr">
							<value>10.45.47.168:9876</value>
						</property>
						<property name="groupName">
							<value>transactionSend</value>
						</property>
					</bean>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
				<property name="maxTotal">
					<value>3</value>
				</property>
				<property name="maxIdle">
					<value>3</value>
				</property>
				<property name="minIdle">
					<value>1</value>
				</property>
			</bean>
		</constructor-arg>
	</bean>

	<bean name="normalReceiveController"
		class="com.ztesoft.mq.client.rocketMQ.control.DefaultEventReceiveController">
		<constructor-arg>
			<bean
				class="com.ztesoft.mq.client.rocketMQ.bean.ReceiveTemplatePoolFactory">
				<property name="clientConfig">
					<bean class="com.ztesoft.mq.client.rocketMQ.control.EventControlConfig">
						<property name="namesrvAddr">
							<value>10.45.47.168:9876</value>
						</property>
						<property name="groupName">
							<value>transactionReceive</value>
						</property>
					</bean>
				</property>
				<!-- 如果设置了register topic，在查询该topic下可用队列时会自动rebalance，建议配置该参数 -->
				<property name="registerTopics">
					<set>
						<value>ZTETransaction</value>
					</set>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
				<property name="maxTotal">
					<value>3</value>
				</property>
				<property name="maxIdle">
					<value>3</value>
				</property>
				<property name="minIdle">
					<value>1</value>
				</property>
			</bean>
		</constructor-arg>
	</bean>

	<bean name="receiveListenerController"
		class="com.ztesoft.mq.client.rocketMQ.control.DefaultSingleEventListenerController"
		init-method="start" destroy-method="destroy" scope="singleton">
		<property name="config">
			<bean class="com.ztesoft.mq.client.rocketMQ.control.EventListenerControlConfig">
				<property name="namesrvAddr">
					<value>10.45.47.168:9876</value>
				</property>
				<property name="groupName">
					<value>transactionListener</value>
				</property>
				<property name="consumeThreadMin">
					<value>1</value>
				</property>
				<property name="consumeThreadMax">
					<value>4</value>
				</property>
				<property name="pullInterval">
					<value>10</value>
				</property>
				<property name="consumeMessageBatchMaxSize">
					<value>32</value>
				</property>
				<property name="isOrder">
					<value>false</value>
				</property>
			</bean>
		</property>
		<property name="subscription">
			<map>
				<entry key="ZTEExample" value="*"/>
			</map>
		</property>
		<property name="msgErrorHandle">
			<bean class="com.ztesoft.mq.example.rocketmq.simple.PushErrorExample" />
		</property>
	</bean>

	<bean name="receiveListener" class="com.ztesoft.mq.client.EventProcessService"
		init-method="init">
		<property name="listenerController">
			<ref bean="receiveListenerController" />
		</property>
		<property name="topic">
			<value>ZTEExample</value>
		</property>
		<property name="action">
			<value>*</value>
		</property>	
		<property name="processor">
			<bean class="com.ztesoft.mq.example.rocketmq.simple.ReceivePushExample" />
		</property>
	</bean>
</beans>