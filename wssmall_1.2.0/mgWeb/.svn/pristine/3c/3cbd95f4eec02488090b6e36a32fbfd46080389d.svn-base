/*定义列表容器的样式，使用div元素*/
.grid{
	font-family:Arial,"宋体",Verdana,sans-serif;
	font-size:12px;
	clear:both;
}

/*定义列表容器中所有公用元素样式，需要重定义的，在下面再重新定义*/
.grid ul{
	list-style-type:none;
	text-align:center;
}
.grid ul li{
	float:left;
}

/*定义列表容器中表格的样式，使用table元素*/
.grid table{
border-collapse:collapse;
	width:100%;
}

/*定义表格中列头的样式，使用th元素*/
.grid table th{
	text-align:left;
}
/*定义表格中列头中链接样式，使用th元素*/
.grid th a{
	color: #000000;
	text-decoration: none;
}
/*定义表格中单元格的样式，使用td元素*/
.grid table td{border-bottom:1px dashed #E1E1E1;}
.grid table tbody a{text-decoration: underline;}
.grid table tr{
border-collapse:collapse;
	border-bottom:1px dotted #e1e1e1;
}


.grid tbody tr:hover{
		background:none repeat scroll 0 0 #F1F7FD;
}
/*定义列表容器中分页的样式，使用div元素*/
.grid .page{
	padding:5px 0 0 10px;
}


/*定义列表容器中分页信息的样式，使用span元素*/
.grid .page .info{
	border: 1px solid #cdcdcd;
	background: #f8f8f8;
	padding:3px 6px;
	margin:0px 2px 2px 2px;
	color: #444;
	float:left;
}

/*定义列表容器中分页的样式，使用ul元素*/
.grid .page ul{
	color: #FFF;
	float:right;
	line-height:30px;
}

/*定义列表容器中分页的样式，使用li元素*/
.grid .page ul li{
}

/*定义列表容器中分页链接的样式，使用li元素*/
.grid .page li a{
	border: 1px solid #cdcdcd;
	background: #f8f8f8;
	padding:2px 6px;
	margin:2px;
	color: #444;
	text-decoration: none;	
}

/*定义列表容器中选中页的样式，使用li元素*/
.grid .page .selected{
	font-weight: bold; color: #FFF;
	background:#6497d4;
	border:1px solid #6497d4;
}
/*定义表格中列头升序的样式，使用元素*/
.grid .asc{
	color:#000;
	padding-right:18px;
	background:url(../images/arrow_up.gif) no-repeat center right;
}
/*定义表格中列头降序的样式，使用a元素*/
.grid .desc{
	color:#000;
	padding-right:18px;
	background:url(../images/arrow_down.gif) no-repeat center right;
}

#grid_head th {
	text-align: center;
}